@model LokalConnect.Models.HomeViewModel

@{
    ViewBag.Title = "LokalConnect - Municipal Job Matching Portal";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Connect Local Talent with Local Businesses</h1>
                <p class="lead">LokalConnect bridges the gap between job seekers and employers in our municipality.</p>
                <div class="mt-4">
                    @Html.ActionLink("Find Jobs", "Index", "Jobs", null, new { @class = "btn btn-light btn-lg me-3" })
                    @Html.ActionLink("Post a Job", "Create", "Jobs", null, new { @class = "btn btn-outline-light btn-lg" })
                </div>
            </div>
            <div class="col-lg-6">
                <img src="~/Content/images/hero-image.svg" alt="Job Matching" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <h3 class="text-primary fw-bold">@Model.JobCount</h3>
                <p>Available Jobs</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-primary fw-bold">@Model.BusinessCount</h3>
                <p>Registered Businesses</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-primary fw-bold">@Model.JobSeekerCount</h3>
                <p>Job Seekers</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-primary fw-bold">100+</h3>
                <p>Successful Matches</p>
            </div>
        </div>
    </div>
</section>

<!-- Recent Jobs Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Recent Job Openings</h2>
        <div class="row">
            @foreach (var job in Model.RecentJobs)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@job.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@job.CompanyName</h6>
                            <p class="card-text">@job.Location</p>
                            <p class="card-text">
                                <small class="text-muted">@job.JobType â€¢ Posted @job.PostedDate.ToString("MMM dd, yyyy")</small>
                            </p>
                        </div>
                        <div class="card-footer">
                            @Html.ActionLink("View Details", "Details", "Jobs", new { id = job.JobId }, new { @class = "btn btn-primary btn-sm" })
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            @Html.ActionLink("View All Jobs", "Index", "Jobs", null, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
</section>
