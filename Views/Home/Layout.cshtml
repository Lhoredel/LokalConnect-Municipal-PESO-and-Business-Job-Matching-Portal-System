        // Apply for a job
        function applyForJob(jobId) {
            if (!currentUser) {
                alert('Please login to apply for jobs');
                showModal(loginModal);
                return;
            }
            
            const job = sampleJobs.find(j => j.id === jobId);
            if (job) {
                alert(`Application submitted for ${job.title} at ${job.company}`);
                
                // In a real app, this would update the database
                if (currentUser.userType === 'jobSeeker') {
                    // Refresh job seeker dashboard
                    loadJobSeekerData();
                }
            }
        }

        // Add a new job posting
        function addNewJob() {
            const jobTitle = prompt('Enter job title:');
            if (jobTitle) {
                alert(`Job posting "${jobTitle}" created successfully!`);
                
                // In a real app, this would update the database
                if (currentUser.userType === 'business') {
                    // Refresh business dashboard
                    loadBusinessData();
                }
            }
